@model UnlinkResourceModel
@{
    ViewData["Title"] = $"Remove '{Model.Resource.Title}' from '{Model.Article.Title}'";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <p>Are you certain that you want to remove the resource?</p>
        <a class="btn btn-sm btn-default"
           asp-area="Admin"
           asp-controller="Articles"
           asp-action="Edit"
           asp-route-id="@Model.Article.Id">Back</a>
        <a class="btn btn-sm btn-danger"
           asp-area="Admin"
           asp-controller="Resources"
           asp-action="Unlink"
           asp-route-id="@Model.Resource.Id"
           asp-route-articleid="@Model.Article.Id">Remove</a>
    </div>
</div>
