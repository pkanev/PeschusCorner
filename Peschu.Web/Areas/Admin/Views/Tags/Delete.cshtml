@model TagListingModel
@{
    ViewData["Title"] = $"Delete '{Model.Title}'";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <p>Are you certain that you want to delete this tag?</p>
        <a class="btn btn-default"
           asp-area="Admin"
           asp-controller="Tags"
           asp-action="Index">Back to tags</a>
        <a asp-area="Admin"
           asp-controller="Tags"
           asp-action="Destroy"
           asp-route-id="@Model.Id"
           class="btn btn-danger">Delete</a>
    </div>
</div>

