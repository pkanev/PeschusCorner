@model UnlinkTagModel
@{
    ViewData["Title"] = $"Remove [{Model.Tag.Title}] from '{Model.Article.Title}'";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-12">
        <p>Are you certain that you want to remove [@Model.Tag.Title] from '@Model.Article.Title'?</p>
        <a class="btn btn-default"
           asp-area="Admin"
           asp-controller="Articles"
           asp-action="Edit"
           asp-route-id="@Model.Article.Id">Back</a>
        <a asp-area="Admin"
           asp-controller="Tags"
           asp-action="Unlink"
           asp-route-id="@Model.Tag.Id"
           asp-route-articleid="@Model.Article.Id"
           class="btn btn-danger">Remove</a>
    </div>
</div>
