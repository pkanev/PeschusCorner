@model  IPageListing

@if (Model.TotalPages > 1)
{
<nav aria-label="Page navigation">
    <ul class="pagination pagination-sm">
        <li class="page-item @Model.PreviousDisabled">
            @if (Model.RouteId > 0)
            {
                <a class="page-link @Model.PreviousDisabled"
                   asp-area="@Model.Area" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-id="@Model.RouteId" asp-route-page="@Model.PreviousPage"
                   aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            }
            else
            {
                <a class="page-link @Model.PreviousDisabled"
                   asp-area="@Model.Area" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-page="@Model.PreviousPage"
                   aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>

            }
        </li>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
        <li class="page-item @(i == Model.CurrentPage ? "active" : string.Empty)">
            @if (Model.RouteId > 0)
            {
                <a class="page-link" asp-area="@Model.Area" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-id="@Model.RouteId" asp-route-page="@i">@i</a>
            }
            else
            {
                <a class="page-link" asp-area="@Model.Area" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-page="@i">@i</a>
            }
        </li>
        }
        <li class="page-item @Model.NextDisabled">
            @if (Model.RouteId > 0)
            {
                    <a class="page-link @Model.NextDisabled"
                       asp-area="@Model.Area" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-id="@Model.RouteId" asp-route-page="@Model.NextPage"
                       aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
            }
            else
            {
                <a class="page-link @Model.NextDisabled"
                   asp-area="@Model.Area" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-page="@Model.NextPage"
                   aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            }
        </li>
    </ul>
</nav>
}